.container
  display grid
  height min-content
  grid-gap 10px
  border 1px solid gray
  background-color beige
  padding 20px
  border-radius 5px

.titleContainer
  justify-self center

.form
  display grid
  grid-gap 10px
  max-width 350px

.fields
  display grid
  justify-items center
  grid-gap 10px

.input
  background rgb(250,250,250)
  border 1px solid darkgray
  padding 9px 0 7px 8px
  text-overflow ellipsis
  width 250px
  border-radius 5px

.submitBtn
  height 33px
  background-color coral
  border 0
  border-radius 20px

.link
  color inherit
  text-decoration none

